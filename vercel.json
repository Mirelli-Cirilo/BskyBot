{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/$1"
    }
  ],

  "cron": [
    {
      "path": "/api/cron",
      "schedule": "0 14 * * *" 
    }
  ]
}